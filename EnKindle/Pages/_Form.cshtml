@model EnKindle.Model.Greetings
@using Microsoft.Extensions.Configuration;
@inject IConfiguration _myConfiguration
@*PREVIEW PAGE ---START *@

            <div>*All Fileds are Required</div>
            <div class="form-group">
                <input asp-for="@Model.Recipientname" type="text" class="form-control form-control-sm" maxlength="100" />
                <span asp-validation-for="@Model.Recipientname" class="text-danger"></span>
                <div class="countdown text-warning"></div>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Recipientemail" type="email" class="form-control form-control-sm" maxlength="100" />
                <span asp-validation-for="@Model.Recipientemail" class="text-danger"></span>
                <div class="countdown text-warning"></div>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Subject" type="text" class="form-control form-control-sm" maxlength="100" />
                <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                <div class="countdown text-warning"></div>
            </div>
            <div class="form-group">
                <textarea asp-for="@Model.Mesgfromuser" class="form-control form-control-sm" id="messageTextarea" rows="1" maxlength="750" required></textarea>
                <span asp-validation-for="@Model.Mesgfromuser" class="text-danger"> </span>
                <div class="countdown text-warning"></div>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Sendersname" type="text" class="form-control form-control-sm" maxlength="100" />
                <span asp-validation-for="@Model.Sendersname" class="text-danger"></span>
                <div class="countdown text-warning"></div>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Sendersemail" type="email" class="form-control form-control-sm" maxlength="100" />
                <span asp-validation-for="@Model.Sendersemail" class="text-danger"></span>
                <div class="countdown text-warning"></div>
            </div>
            @*EDIT & CONFIRM BUTTONS START *@
            @*<div class="has-error">@Model.mesgfromuser</div>*@
            @*<form method="post">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="hidden" asp-for="@Model.ID" />
                            <input type="submit" class="btn btn-primary" value="Send it, baby!" />
                        </div>
                    </div>
                </form>*@
            @*EDIT & CONFIRM BUTTONS END *@
            @*PREVIEW PAGE --- END *@

            <!-- CUSTOM Recaptcha API    START -->
@if ( ViewBag.meta_title == "Home") { 
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="@_myConfiguration["Recaptcha:PublicKey"]"></div>
                <span asp-validation-for="@Model.ReCaptcha" class="text-danger"></span>
            </div>
}
            <!-- CUSTOM Recaptcha API    END -->
            
